<div style="margin-left: 110px; padding: 30px; width: 85vw;">
    {{#each blogs}}
    <div class="card mb-3" style="width: 100%; height: auto;  box-shadow: 0 6px 8px rgba(9, 84, 99, 0.3);"> <!-- Added border and shadow to the card -->
        <img src="{{this.image}}" class="card-img-top" alt="..." style="width: 100%; height: 500px;">
        <div class="card-body">
            <a href="/blogpost/{{this.author}}">
                <h5 class="card-title" style="font-size: 50px;">{{this.title}}</h5>
            </a>
           

             <h4 class="card-subtitle mb-2 text-muted" style="font-size: 20px;display: inline;"> by  </h4><h6 class="card-subtitle mb-2 text-muted" style="font-size: 30px;display: inline;">{{this.author}}</h6>
             <br>
        <hr>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text"><small class="text-muted">Last updated {{this.date}}</small></p>
           

        </div>
    </div>
    {{/each}}
</div>
